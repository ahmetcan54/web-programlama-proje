<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitLife Spor Salonu</title>

    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-trophy-fill me-2"></i>FitLife
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#hakkimizda">
                                <i class="bi bi-info-circle"></i> Hakkımızda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Hizmet" asp-action="Index">
                                <i class="bi bi-card-checklist"></i> Hizmetlerimiz
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Antrenor" asp-action="Index">
                                <i class="bi bi-people"></i> Antrenörlerimiz
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#fiyatlandirma">
                                <i class="bi bi-tag"></i> Fiyatlandırma
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#iletisim">
                                <i class="bi bi-envelope"></i> İletişim
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Randevu" asp-action="Index">
                                    <i class="bi bi-calendar-check"></i> Randevularım
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear-fill"></i> Yönetim
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Istatistikler"><i class="bi bi-graph-up"></i> İstatistikler</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Uyeler"><i class="bi bi-person"></i> Üyeler</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Antrenorler"><i class="bi bi-people"></i> Antrenörler</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Randevular"><i class="bi bi-calendar"></i> Randevular</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Hizmetler"><i class="bi bi-card-list"></i> Hizmetler</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profilim</a></li>
                                    @if (User.IsInRole("Uye"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Uye" asp-action="AIAsistan"><i class="bi bi-robot"></i> AI Asistan</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-trophy-fill me-2"></i>FitLife Spor Salonu</h5>
                    <p class="text-muted">Modern spor salonu yönetim sistemi</p>
                </div>
                <div class="col-md-4">
                    <h5>Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">Hakkımızda</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">İletişim</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Hizmetlerimiz</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>İletişim</h5>
                    <p class="text-muted mb-1"><i class="bi bi-geo-alt-fill me-2"></i>Adapazarı, Sakarya</p>
                    <p class="text-muted mb-1"><i class="bi bi-telephone-fill me-2"></i>+90 555 123 4567</p>
                    <p class="text-muted mb-1"><i class="bi bi-envelope-fill me-2"></i>info@fitlife.com</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted">
                <p class="mb-0">&copy; 2025 FitLife Spor Salonu. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (opsiyonel) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
