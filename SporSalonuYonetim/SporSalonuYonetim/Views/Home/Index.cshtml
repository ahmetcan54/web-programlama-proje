@model HomeViewModel
@{
    ViewData["Title"] = "FitLife Spor Salonu";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-3 fw-bold mb-3">
                    Hayalinizdeki Vücuda Ulaşın
                </h1>
                <p class="lead mb-4">
                    Modern ekipmanlar, profesyonel antrenörler ve kişiselleştirilmiş programlarla
                    fitness hedeflerinize ulaşmanız için yanınızdayız!
                </p>
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-2 mb-2">
                        <i class="bi bi-person-plus me-2"></i>Ücretsiz Deneme
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg mb-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </a>
                }
                else
                {
                    <a asp-controller="Randevu" asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-calendar-plus me-2"></i>Randevu Al
                    </a>
                }
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=600&h=400&fit=crop"
                     alt="FitLife Spor Salonu" class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-4">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-3 mb-md-0">
                <h2 class="text-primary fw-bold mb-0">@Model.ToplamUyeSayisi+</h2>
                <p class="text-muted mb-0">Aktif Üye</p>
            </div>
            <div class="col-md-3 mb-3 mb-md-0">
                <h2 class="text-success fw-bold mb-0">@Model.AktifAntrenorSayisi</h2>
                <p class="text-muted mb-0">Uzman Antrenör</p>
            </div>
            <div class="col-md-3 mb-3 mb-md-0">
                <h2 class="text-warning fw-bold mb-0">@Model.ToplamHizmetSayisi</h2>
                <p class="text-muted mb-0">Farklı Hizmet</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-danger fw-bold mb-0">7/24</h2>
                <p class="text-muted mb-0">Açık</p>
            </div>
        </div>
    </div>
</div>

<!-- Trainers Section -->
@if (Model.Antrenorler.Any())
{
    <div class="bg-light py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">Uzman Antrenörlerimiz</h2>
                <p class="lead text-muted">Deneyimli ve sertifikalı antrenörlerimizle tanışın</p>
            </div>

            <div class="row g-4">
                @foreach (var antrenor in Model.Antrenorler)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-body text-center p-4">
                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width: 100px; height: 100px; font-size: 2.5rem;">
                                    @antrenor.Ad.Substring(0, 1)@antrenor.Soyad.Substring(0, 1)
                                </div>
                                <h5 class="card-title mb-2">@antrenor.AdSoyad</h5>
                                <p class="text-primary fw-bold mb-2">@antrenor.UzmanlikAlani</p>
                                <p class="text-muted small mb-3">
                                    <i class="bi bi-award me-1"></i>@antrenor.DeneyimYili yıl deneyim
                                </p>
                                @if (!string.IsNullOrEmpty(antrenor.Email))
                                {
                                    <p class="small text-muted mb-2">
                                        <i class="bi bi-envelope me-1"></i>@antrenor.Email
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(antrenor.Telefon))
                                {
                                    <p class="small text-muted mb-3">
                                        <i class="bi bi-telephone me-1"></i>@antrenor.Telefon
                                    </p>
                                }
                                <a asp-controller="Antrenor" asp-action="Details" asp-route-id="@antrenor.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    Detayları Gör
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Antrenor" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-people me-2"></i>Tüm Antrenörleri Görüntüle
                </a>
            </div>
        </div>
    </div>
}

<!-- Gallery Section -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold mb-3">Salonumuzdan Görüntüler</h2>
        <p class="lead text-muted">Modern ve ferah tesislerimizi keşfedin</p>
    </div>

    <div class="row g-4">
