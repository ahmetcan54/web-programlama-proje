@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h2>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Toplam Üye</h6>
                            <h2 class="mb-0">@Model.ToplamUyeSayisi</h2>
                            <small>Aktif: @Model.AktifUyeSayisi</small>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Uyeler" class="text-white text-decoration-none small">
                        Detaylar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Antrenörler</h6>
                            <h2 class="mb-0">@Model.ToplamAntrenorSayisi</h2>
                            <small>Aktif: @Model.AktifAntrenorSayisi</small>
                        </div>
                        <i class="bi bi-person-badge-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Antrenorler" class="text-white text-decoration-none small">
                        Detaylar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Bekleyen Randevu</h6>
                            <h2 class="mb-0">@Model.BekleyenRandevuSayisi</h2>
                            <small>Bugün: @Model.BugunkuRandevuSayisi</small>
                        </div>
                        <i class="bi bi-hourglass-split" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Randevular" asp-route-durum="Beklemede" class="text-dark text-decoration-none small">
                        Detaylar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Bu Ay Gelir</h6>
                            <h2 class="mb-0">@Model.BuAyGelir.ToString("N0") ₺</h2>
                            <small>@Model.BuAyToplamRandevu Randevu</small>
                        </div>
                        <i class="bi bi-cash-coin" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Istatistikler" class="text-white text-decoration-none small">
                        Detaylar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Randevular ve Yeni Üyeler -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Son Randevular</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.SonRandevular != null && Model.SonRandevular.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Üye</th>
                                        <th>Antrenör</th>
                                        <th>Hizmet</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var randevu in Model.SonRandevular)
                                    {
                                        var durumClass = randevu.Durum switch
                                        {
                                            RandevuDurumu.Beklemede => "warning",
                                            RandevuDurumu.Onaylandi => "success",
                                            RandevuDurumu.Tamamlandi => "info",
                                            _ => "secondary"
                                        };
                                        <tr>
                                            <td>@randevu.Uye?.AdSoyad</td>
                                            <td>@randevu.Antrenor?.AdSoyad</td>
                                            <td>@randevu.Hizmet?.Ad</td>
                                            <td>@randevu.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><span class="badge bg-@durumClass">@randevu.Durum</span></td>
                                            <td>
                                                @if (randevu.Durum == RandevuDurumu.Beklemede)
                                                {
                                                    <form asp-action="RandevuOnayla" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@randevu.Id" />
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-check"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted p-3">Henüz randevu bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Yeni Üyeler</h5>
                </div>
                <div class="card-body">
                    @if (Model.YeniUyeler != null && Model.YeniUyeler.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var uye in Model.YeniUyeler)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">@uye.AdSoyad</h6>
                                        <small class="text-muted">@uye.UyelikBaslangic.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <span class="badge bg-success rounded-pill">Yeni</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-center text-muted">Henüz yeni üye bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
