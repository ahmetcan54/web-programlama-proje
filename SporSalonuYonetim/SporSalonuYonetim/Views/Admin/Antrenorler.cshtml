@model IEnumerable<Antrenor>
@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge me-2"></i>Antrenör Yönetimi</h2>
        <div>
            <a asp-controller="Antrenor" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg me-2"></i>Yeni Antrenör
            </a>
            <a asp-controller="Antrenor" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-list me-2"></i>Detaylý Görünüm
            </a>
        </div>
    </div>
    
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Uzmanlýk Alaný</th>
                            <th>Deneyim</th>
                            <th>Spor Salonu</th>
                            <th>Durum</th>
                            <th>Ýþlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var antrenor in Model)
                        {
                            <tr>
                                <td><strong>@antrenor.AdSoyad</strong></td>
                                <td>@antrenor.Email</td>
                                <td>@antrenor.Telefon</td>
                                <td>@antrenor.UzmanlikAlani</td>
                                <td><span class="badge bg-primary">@antrenor.DeneyimYili yýl</span></td>
                                <td>@antrenor.SporSalonu?.Ad</td>
                                <td>
                                    @if (antrenor.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Antrenor" asp-action="Details" asp-route-id="@antrenor.Id" class="btn btn-info" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="Antrenor" asp-action="Edit" asp-route-id="@antrenor.Id" class="btn btn-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Antrenor" asp-action="Delete" asp-route-id="@antrenor.Id" class="btn btn-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">Henüz kayýtlý antrenör bulunmamaktadýr.</p>
                </div>
            }
        </div>
    </div>
</div>
