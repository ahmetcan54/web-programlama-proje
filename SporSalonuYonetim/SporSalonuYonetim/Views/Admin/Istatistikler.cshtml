@using System.Text.Json
@model dynamic
@{
    ViewData["Title"] = "İstatistikler";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4"><i class="bi bi-graph-up me-2"></i>Detaylı İstatistikler</h2>

    <!-- Genel Özet -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Toplam Üye</h6>
                    <h2 class="mb-0">@Model.ToplamUye</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Toplam Antrenör</h6>
                    <h2 class="mb-0">@Model.ToplamAntrenor</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Toplam Randevu</h6>
                    <h2 class="mb-0">@Model.ToplamRandevu</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Toplam Gelir</h6>
                    <h2 class="mb-0">@Model.ToplamGelir.ToString("N0") ₺</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Aylık Randevu Grafik -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart-line me-2"></i>Aylık Randevu Trendi (Son 12 Ay)</h5>
                </div>
                <div class="card-body">
                    @if (Model.AylikRandevular != null && ((IEnumerable<dynamic>)Model.AylikRandevular).Any())
                    {
                        <canvas id="aylikRandevuChart" style="height: 300px;"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-muted py-5">Henüz yeterli veri bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>En Popüler Hizmetler</h5>
                </div>
                <div class="card-body">
                    @if (Model.PopulerHizmetler != null && ((IEnumerable<dynamic>)Model.PopulerHizmetler).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var hizmet in Model.PopulerHizmetler)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span>@hizmet.HizmetAdi</span>
                                    <span class="badge bg-primary rounded-pill">@hizmet.Sayi</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted">Henüz veri yok.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Aylık Randevu Tablosu -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-table me-2"></i>Aylık Detaylar</h5>
                </div>
                <div class="card-body">
                    @if (Model.AylikRandevular != null && ((IEnumerable<dynamic>)Model.AylikRandevular).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Dönem</th>
                                        <th class="text-end">Randevu Sayısı</th>
                                        <th class="text-end">Artış/Azalış</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var aylar = new[] { "", "Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran",
                                                                "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık" };
                                        int? oncekiSayi = null;
                                    }
                                    @foreach (var ay in Model.AylikRandevular)
                                    {
                                        <tr>
                                            <td>@aylar[ay.Ay] @ay.Yil</td>
                                            <td class="text-end"><strong>@ay.Sayi</strong></td>
                                            <td class="text-end">
                                                @if (oncekiSayi.HasValue)
                                                {
                                                    var fark = ay.Sayi - oncekiSayi.Value;
                                                    var yuzde = oncekiSayi.Value > 0 ? (fark * 100.0 / oncekiSayi.Value) : 0;

                                                    if (fark > 0)
                                                    {
                                                        <span class="text-success">
                                                            <i class="bi bi-arrow-up"></i> +@fark (@yuzde.ToString("0.0")%)
                                                        </span>
                                                    }
                                                    else if (fark < 0)
                                                    {
                                                        <span class="text-danger">
                                                            <i class="bi bi-arrow-down"></i> @fark (@yuzde.ToString("0.0")%)
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                                @{
                                                    oncekiSayi = ay.Sayi;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted py-4">Henüz randevu verisi bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-4">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Dashboard'a Dön
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        @if (Model.AylikRandevular != null && ((IEnumerable<dynamic>)Model.AylikRandevular).Any())
        {
                <text>
                const aylar = ['', 'Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran',
                              'Temmuz', 'Ağustos', 'Eylül', 'Ekim', 'Kasım', 'Aralık'];

                var aylikData = @Html.Raw(Json.Serialize(Model.AylikRandevular));
                const labels = aylikData.map(x => aylar[x.Ay] + ' ' + x.Yil);
                const data = aylikData.map(x => x.Sayi);

                const ctx = document.getElementById('aylikRandevuChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Randevu Sayısı',
                            data: data,
                            borderColor: 'rgb(13, 110, 253)',
                            backgroundColor: 'rgba(13, 110, 253, 0.1)',
                            tension: 0.4,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return 'Randevu: ' + context.parsed.y;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    precision: 0
                                }
                            }
                        }
                    }
                });
                </text>
        }
    </script>
}
