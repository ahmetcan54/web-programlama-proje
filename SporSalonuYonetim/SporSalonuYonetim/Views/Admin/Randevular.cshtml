@model IEnumerable<Randevu>
    @{
    ViewData["Title"] = "Randevu Yönetimi";
    }

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-calendar-event me-2"></i>Randevu Yönetimi</h2>
        </div>

        <!-- Filtre -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="btn-group" role="group">
                    <a asp-action="Randevular" class="btn btn-outline-primary @(string.IsNullOrEmpty(ViewData["DurumFilter"] as string) ? "active" : "")">
                        Tümü (@Model.Count())
                    </a>
                    <a asp-action="Randevular" asp-route-durum="Beklemede" class="btn btn-outline-warning @(ViewData["DurumFilter"] as string == "Beklemede" ? "active" : "")">
                        Beklemede (@Model.Count(r => r.Durum == RandevuDurumu.Beklemede))
                    </a>
                    <a asp-action="Randevular" asp-route-durum="Onaylandi" class="btn btn-outline-success @(ViewData["DurumFilter"] as string == "Onaylandi" ? "active" : "")">
                        Onaylandı (@Model.Count(r => r.Durum == RandevuDurumu.Onaylandi))
                    </a>
                    <a asp-action="Randevular" asp-route-durum="Tamamlandi" class="btn btn-outline-info @(ViewData["DurumFilter"] as string == "Tamamlandi" ? "active" : "")">
                        Tamamlandı (@Model.Count(r => r.Durum == RandevuDurumu.Tamamlandi))
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Üye</th>
                                <th>Antrenör</th>
                                <th>Hizmet</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var randevu in Model)
                        {
                            var durumClass = randevu.Durum switch
                            {
                                RandevuDurumu.Beklemede => "warning",
                                RandevuDurumu.Onaylandi => "success",
                                RandevuDurumu.Tamamlandi => "info",
                                RandevuDurumu.Reddedildi => "danger",
                                RandevuDurumu.IptalEdildi => "secondary",
                                _ => "secondary"
                            };

                            <tr>
                                <td>
                                    <strong>@randevu.Uye?.AdSoyad</strong><br>
                                    <small class="text-muted">@randevu.Uye?.Email</small>
                                </td>
                                <td>@randevu.Antrenor?.AdSoyad</td>
                                <td>
                                    @randevu.Hizmet?.Ad<br>
                                    <small class="text-muted">@randevu.Hizmet?.Ucret ₺</small>
                                </td>
                                <td>@randevu.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                                <td>@randevu.BaslangicSaati.ToString(@"hh\:mm") - @randevu.BitisSaati.ToString(@"hh\:mm")</td>
                                <td><span class="badge bg-@durumClass">@randevu.Durum</span></td>
                                <td>
                                    @if (randevu.Durum == RandevuDurumu.Beklemede)
                                    {
                                    <form asp-action="RandevuOnayla" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@randevu.Id" />
                                        <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal@(randevu.Id)" title="Reddet">
                                        <i class="bi bi-x-lg"></i>
                                    </button>

 <!-- Reddetme Modal -->
                                    <div class="modal fade" id="rejectModal@(randevu.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Randevu Reddet</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form asp-action="RandevuReddet" method="post">
                                                    <input type="hidden" name="id" value="@randevu.Id" />
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">Red Nedeni</label>
                                                            <textarea name="iptalNedeni" class="form-control" rows="3" required></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                        <button type="submit" class="btn btn-danger">Reddet</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                    else
                                    {
                                    <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">Randevu bulunmamaktadır.</p>
                </div>
            }
            </div>
        </div>
    </div>
