@model Hizmet
@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Hizmet Düzenle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="OlusturmaTarihi" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Sure" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Sure" class="form-control" type="number" />
                                    <span class="input-group-text">dk</span>
                                </div>
                                <span asp-validation-for="Sure" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Ucret" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="Ucret" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Kategori" class="form-label"></label>
                                <input asp-for="Kategori" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SporSalonuId" class="form-label"></label>
                                <select asp-for="SporSalonuId" class="form-select" asp-items="ViewBag.SporSalonuId"></select>
                                <span asp-validation-for="SporSalonuId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="AntrenorId" class="form-label"></label>
                                <select asp-for="AntrenorId" class="form-select" asp-items="ViewBag.AntrenorId">
                                    <option value="">-- Seçiniz --</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Aktif" class="form-check-input" />
                            <label asp-for="Aktif" class="form-check-label"></label>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Geri
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
