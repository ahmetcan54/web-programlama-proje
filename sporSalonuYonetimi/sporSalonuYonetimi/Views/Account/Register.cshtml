@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-fill text-success" style="font-size: 4rem;"></i>
                        <h2 class="mt-3">Üye Ol</h2>
                        <p class="text-muted">FitLife ailesine katılın!</p>
                    </div>

                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Kişisel Bilgiler -->
                        <h5 class="mb-3"><i class="bi bi-person me-2"></i>Kişisel Bilgiler</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" placeholder="Adınız" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" placeholder="Soyadınız" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefon" class="form-label"></label>
                                <input asp-for="Telefon" class="form-control" placeholder="+90 555 123 4567" />
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DogumTarihi" class="form-label"></label>
                                <input asp-for="DogumTarihi" class="form-control" type="date" />
                                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cinsiyet" class="form-label"></label>
                                <select asp-for="Cinsiyet" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Fiziksel Bilgiler -->
                        <h5 class="mb-3"><i class="bi bi-rulers me-2"></i>Fiziksel Bilgiler (Opsiyonel)</h5>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Boy" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Boy" class="form-control" placeholder="175" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Boy" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Kilo" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Kilo" class="form-control" placeholder="75" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Kilo" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="VucutTipi" class="form-label"></label>
                                <select asp-for="VucutTipi" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <option value="Ektomorf">Ektomorf (İnce)</option>
                                    <option value="Mezomorf">Mezomorf (Atletik)</option>
                                    <option value="Endomorf">Endomorf (Endomorph)</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Hedefler" class="form-label"></label>
                            <textarea asp-for="Hedefler" class="form-control" rows="3"
                                      placeholder="Hedeflerinizi yazın (örn: Kilo vermek, kas yapmak)"></textarea>
                            <span asp-validation-for="Hedefler" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Güvenlik -->
                        <h5 class="mb-3"><i class="bi bi-shield-lock me-2"></i>Güvenlik</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4 form-check">
                            <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" />
                            <label asp-for="AcceptTerms" class="form-check-label">
                                <a href="#" class="text-decoration-none">Kullanım koşullarını</a> kabul ediyorum
                            </label>
                            <span asp-validation-for="AcceptTerms" class="text-danger d-block"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                            </button>
                        </div>

                        <hr>

                        <div class="text-center">
                            <p class="mb-0">
                                Zaten hesabınız var mı?
                                <a asp-action="Login" asp-controller="Account" class="text-decoration-none">
                                    <strong>Giriş Yapın</strong>
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
