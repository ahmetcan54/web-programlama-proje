@using SporSalonuYonetimi.Models
@model IEnumerable<Hizmet>
@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-check me-2"></i>Hizmet Yönetimi</h2>
        <div>
            <a asp-controller="Hizmet" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg me-2"></i>Yeni Hizmet
            </a>
            <a asp-controller="Hizmet" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-list me-2"></i>Detaylı Görünüm
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hizmet Adı</th>
                            <th>Kategori</th>
                            <th>Süre</th>
                            <th>Ücret</th>
                            <th>Antrenör</th>
                            <th>Spor Salonu</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hizmet in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@hizmet.Ad</strong><br>
                                    <small class="text-muted">@hizmet.Aciklama?.Substring(0, Math.Min(50, hizmet.Aciklama?.Length ?? 0))...</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(hizmet.Kategori))
                                    {
                                        <span class="badge bg-info">@hizmet.Kategori</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td><span class="badge bg-primary">@hizmet.Sure dk</span></td>
                                <td><strong>@hizmet.Ucret ₺</strong></td>
                                <td>@(hizmet.Antrenor?.AdSoyad ?? "-")</td>
                                <td>@hizmet.SporSalonu?.Ad</td>
                                <td>
                                    @if (hizmet.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Hizmet" asp-action="Details" asp-route-id="@hizmet.Id" class="btn btn-info" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="Hizmet" asp-action="Edit" asp-route-id="@hizmet.Id" class="btn btn-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Hizmet" asp-action="Delete" asp-route-id="@hizmet.Id" class="btn btn-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">Henüz kayıtlı hizmet bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</div>
