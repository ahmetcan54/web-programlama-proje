@using SporSalonuYonetimi.Models
@model IEnumerable<Uye>
@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people me-2"></i>Üye Yönetimi</h2>
        <a asp-controller="Uye" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-list me-2"></i>Detaylı Görünüm
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Boy/Kilo</th>
                            <th>VKİ</th>
                            <th>Üyelik Başlangıç</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uye in Model)
                        {
                            <tr>
                                <td><strong>@uye.AdSoyad</strong></td>
                                <td>@uye.Email</td>
                                <td>@uye.Telefon</td>
                                <td>
                                    @if (uye.Boy.HasValue && uye.Kilo.HasValue)
                                    {
                                        <span>@uye.Boy cm / @uye.Kilo kg</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (uye.VucutKitleIndeksi.HasValue)
                                    {
                                        var vki = uye.VucutKitleIndeksi.Value;
                                        var vkiClass = vki < 18.5 ? "info" : vki < 25 ? "success" : vki < 30 ? "warning" : "danger";
                                        <span class="badge bg-@vkiClass">@vki.ToString("0.0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@uye.UyelikBaslangic.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (uye.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Uye" asp-action="Details" asp-route-id="@uye.Id" class="btn btn-info" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="Uye" asp-action="Edit" asp-route-id="@uye.Id" class="btn btn-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">Henüz kayıtlı üye bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</div>
