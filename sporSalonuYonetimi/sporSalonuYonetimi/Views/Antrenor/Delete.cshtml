@using SporSalonuYonetimi.Models
@model Antrenor
@{
    ViewData["Title"] = "Antrenör Sil";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Antrenör Sil</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Uyarı:</strong> Bu işlem geri alınamaz!
                    </div>

                    <h5>Aşağıdaki antrenörü silmek istediğinizden emin misiniz?</h5>

                    <div class="card mt-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Ad Soyad:</strong> @Model.AdSoyad</p>
                                    <p><strong>Email:</strong> @Model.Email</p>
                                    <p><strong>Telefon:</strong> @Model.Telefon</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Uzmanlık:</strong> @Model.UzmanlikAlani</p>
                                    <p><strong>Deneyim:</strong> @Model.DeneyimYili yıl</p>
                                    <p><strong>Spor Salonu:</strong> @Model.SporSalonu?.Ad</p>
                                </div>
                            </div>

                            @if (Model.Randevular != null && Model.Randevular.Any())
                            {
                                <hr>
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Not:</strong> Bu antrenöre ait @Model.Randevular.Count randevu bulunmaktadır.
                                    Antrenör tamamen silinmeyecek, sadece devre dışı bırakılacaktır.
                                </div>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
