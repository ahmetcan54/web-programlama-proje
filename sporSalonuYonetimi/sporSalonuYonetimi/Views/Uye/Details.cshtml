@using SporSalonuYonetimi.Models
@model Uye
@{
    ViewData["Title"] = "Üye Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 120px; height: 120px; font-size: 3rem;">
                        @Model.Ad.Substring(0, 1)@Model.Soyad.Substring(0, 1)
                    </div>
                    <h3 class="mb-1">@Model.AdSoyad</h3>
                    <p class="text-muted mb-3">Üye</p>

                    @if (Model.Aktif)
                    {
                        <span class="badge bg-success mb-3">Aktif Üyelik</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary mb-3">Pasif Üyelik</span>
                    }

                    <hr>

                    <div class="text-start">
                        <p class="mb-2"><i class="bi bi-envelope me-2"></i>@Model.Email</p>
                        <p class="mb-2"><i class="bi bi-telephone me-2"></i>@Model.Telefon</p>
                        <p class="mb-2"><i class="bi bi-calendar me-2"></i>@Model.DogumTarihi.ToString("dd.MM.yyyy")</p>
                        <p class="mb-0"><i class="bi bi-gender-ambiguous me-2"></i>@Model.Cinsiyet</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Fiziksel Bilgiler</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6 class="text-muted">Boy</h6>
                            <h4>@(Model.Boy.HasValue? Model.Boy + " cm" : "-")</h4>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Kilo</h6>
                            <h4>@(Model.Kilo.HasValue? Model.Kilo + " kg" : "-")</h4>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">VKİ</h6>
                            <h4>
                                @if (Model.VucutKitleIndeksi.HasValue)
                                {
                                    var vki = Model.VucutKitleIndeksi.Value;
                                    var vkiClass = vki < 18.5 ? "info" : vki < 25 ? "success" : vki < 30 ? "warning" : "danger";
                                    <span class="badge bg-@vkiClass">@vki.ToString("0.0")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </h4>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Vücut Tipi</h6>
                            <h4>@(Model.VucutTipi ?? "-")</h4>
                        </div>
                    </div>
                    <hr>
                    <div>
                        <h6 class="text-muted">Sağlık Durumu</h6>
                        <p>@(Model.SaglikDurumu ?? "Belirtilmemiş")</p>
                        <h6 class="text-muted">Hedefler</h6>
                        <p>@(Model.Hedefler ?? "Belirtilmemiş")</p>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Üyelik Bilgileri</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Üyelik Başlangıç:</dt>
                        <dd class="col-sm-8">@Model.UyelikBaslangic.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-4">Üyelik Bitiş:</dt>
                        <dd class="col-sm-8">@(Model.UyelikBitis?.ToString("dd.MM.yyyy") ?? "Süresiz")</dd>

                        <dt class="col-sm-4">Toplam Randevu:</dt>
                        <dd class="col-sm-8">@(Model.Randevular?.Count ?? 0)</dd>
                    </dl>
                </div>
            </div>

            @if (Model.Randevular != null && Model.Randevular.Any())
            {
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Son Randevular</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Antrenör</th>
                                        <th>Hizmet</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var randevu in Model.Randevular.OrderByDescending(r => r.RandevuTarihi).Take(5))
                                    {
                                        <tr>
                                            <td>@randevu.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>@randevu.Antrenor?.AdSoyad</td>
                                            <td>@randevu.Hizmet?.Ad</td>
                                            <td><span class="badge bg-info">@randevu.Durum</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Listeye Dön
        </a>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil me-2"></i>Düzenle
            </a>
        </div>
    </div>
</div>
