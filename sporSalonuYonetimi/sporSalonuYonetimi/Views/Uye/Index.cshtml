@using SporSalonuYonetimi.Models
@model IEnumerable<Uye>
@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-people me-2"></i>Üye Yönetimi</h2>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Üyelik Başlangıç</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uye in Model)
                        {
                            <tr>
                                <td>@uye.AdSoyad</td>
                                <td>@uye.Email</td>
                                <td>@uye.Telefon</td>
                                <td>@uye.UyelikBaslangic.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (uye.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@uye.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@uye.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
