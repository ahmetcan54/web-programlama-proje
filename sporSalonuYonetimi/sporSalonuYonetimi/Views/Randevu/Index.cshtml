@using SporSalonuYonetimi.Models
@model IEnumerable<Randevu>
@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-calendar-check me-2"></i>Randevularım</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Yeni Randevu Al
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var randevu in Model)
            {
                var durumClass = randevu.Durum switch
                {
                    RandevuDurumu.Beklemede => "warning",
                    RandevuDurumu.Onaylandi => "success",
                    RandevuDurumu.Tamamlandi => "info",
                    RandevuDurumu.Reddedildi => "danger",
                    RandevuDurumu.IptalEdildi => "secondary",
                    _ => "secondary"
                };

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-@durumClass text-white">
                            <h6 class="mb-0">@randevu.Durum.ToString()</h6>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@randevu.Hizmet?.Ad</h5>
                            <p class="card-text">
                                <i class="bi bi-person me-2"></i><strong>Antrenör:</strong> @randevu.Antrenor?.AdSoyad<br>
                                <i class="bi bi-calendar-event me-2"></i><strong>Tarih:</strong> @randevu.RandevuTarihi.ToString("dd.MM.yyyy")<br>
                                <i class="bi bi-clock me-2"></i><strong>Saat:</strong> @randevu.BaslangicSaati.ToString(@"hh\:mm") - @randevu.BitisSaati.ToString(@"hh\:mm")<br>
                                <i class="bi bi-cash me-2"></i><strong>Ücret:</strong> @randevu.Hizmet?.Ucret ₺
                            </p>
                            @if (!string.IsNullOrEmpty(randevu.AntrenorNotu))
                            {
                                <div class="alert alert-info small mb-2">
                                    <strong>Antrenör Notu:</strong> @randevu.AntrenorNotu
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@randevu.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                                @if (randevu.Durum == RandevuDurumu.Beklemede || randevu.Durum == RandevuDurumu.Onaylandi)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal" data-bs-target="#cancelModal@(randevu.Id)">
                                        <i class="bi bi-x-circle"></i> İptal
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="cancelModal@(randevu.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Randevu İptal</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form asp-action="Cancel" asp-route-id="@randevu.Id" method="post">
                                                    <div class="modal-body">
                                                        <p>Bu randevuyu iptal etmek istediğinizden emin misiniz?</p>
                                                        <div class="mb-3">
                                                            <label class="form-label">İptal Nedeni (opsiyonel)</label>
                                                            <textarea name="iptalNedeni" class="form-control" rows="3"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                                        <button type="submit" class="btn btn-danger">İptal Et</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Henüz randevunuz bulunmamaktadır.
            <a asp-action="Create" class="alert-link">Hemen randevu alın!</a>
        </div>
    }
</div>
