@using SporSalonuYonetimi.Models
@model Randevu
@{
    ViewData["Title"] = "Randevu Detayları";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Randevu Detayları</h4>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary">Randevu Bilgileri</h5>
                    <dl class="row">
                        <dt class="col-sm-5">Hizmet:</dt>
                        <dd class="col-sm-7"><strong>@Model.Hizmet?.Ad</strong></dd>

                        <dt class="col-sm-5">Antrenör:</dt>
                        <dd class="col-sm-7">@Model.Antrenor?.AdSoyad</dd>

                        <dt class="col-sm-5">Tarih:</dt>
                        <dd class="col-sm-7">@Model.RandevuTarihi.ToString("dd MMMM yyyy, dddd")</dd>

                        <dt class="col-sm-5">Saat:</dt>
                        <dd class="col-sm-7">@Model.BaslangicSaati.ToString(@"hh\:mm") - @Model.BitisSaati.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-5">Süre:</dt>
                        <dd class="col-sm-7">@Model.Hizmet?.Sure dakika</dd>

                        <dt class="col-sm-5">Ücret:</dt>
                        <dd class="col-sm-7"><strong class="text-success">@Model.Hizmet?.Ucret ₺</strong></dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary">Durum Bilgileri</h5>
                    <dl class="row">
                        <dt class="col-sm-5">Durum:</dt>
                        <dd class="col-sm-7">
                            @{
                                var durumClass = Model.Durum switch
                                {
                                    RandevuDurumu.Beklemede => "warning",
                                    RandevuDurumu.Onaylandi => "success",
                                    RandevuDurumu.Tamamlandi => "info",
                                    RandevuDurumu.Reddedildi => "danger",
                                    RandevuDurumu.IptalEdildi => "secondary",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@durumClass fs-6">@Model.Durum</span>
                        </dd>

                        <dt class="col-sm-5">Oluşturma:</dt>
                        <dd class="col-sm-7">@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>

                        @if (Model.OnaylamaTarihi.HasValue)
                        {
                            <dt class="col-sm-5">Onaylama:</dt>
                            <dd class="col-sm-7">@Model.OnaylamaTarihi.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                        }

                        @if (Model.IptalTarihi.HasValue)
                        {
                            <dt class="col-sm-5">İptal/Red:</dt>
                            <dd class="col-sm-7">@Model.IptalTarihi.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.UyeNotu))
            {
                <hr>
                <div class="alert alert-info">
                    <h6><i class="bi bi-chat-left-text me-2"></i>Üye Notu:</h6>
                    <p class="mb-0">@Model.UyeNotu</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AntrenorNotu))
            {
                <div class="alert alert-primary">
                    <h6><i class="bi bi-chat-left-text me-2"></i>Antrenör Notu:</h6>
                    <p class="mb-0">@Model.AntrenorNotu</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.IptalNedeni))
            {
                <div class="alert alert-warning">
                    <h6><i class="bi bi-exclamation-triangle me-2"></i>İptal/Red Nedeni:</h6>
                    <p class="mb-0">@Model.IptalNedeni</p>
                </div>
            }

            <hr>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Listeye Dön
                </a>
                @if (Model.Durum == RandevuDurumu.Beklemede || Model.Durum == RandevuDurumu.Onaylandi)
                {
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                        <i class="bi bi-x-circle me-2"></i>İptal Et
                    </button>

                    <!-- İptal Modal -->
                    <div class="modal fade" id="cancelModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Randevu İptal</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                                    <div class="modal-body">
                                        <p>Bu randevuyu iptal etmek istediğinizden emin misiniz?</p>
                                        <div class="mb-3">
                                            <label class="form-label">İptal Nedeni (opsiyonel)</label>
                                            <textarea name="iptalNedeni" class="form-control" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                        <button type="submit" class="btn btn-danger">İptal Et</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
